{
  "name": "ReadNoEvil",
  "description": "Prune Twitter/Tweetdeck streams to omit users you've blocked.",
  "version": "0.0.8",
  "homepage_url": "https://github.com/Vhati/ReadNoEvil",

  "minimum_chrome_version": "40",

  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*"],
      "css": ["toastr.css"],
      "js": ["jquery-1.12.0.min.js", "toastr.js", "rne-logging.js", "rne-dialog.js", "content-tweetdeck.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://twitter.com/*"],
      "css": ["toastr.css"],
      "js": ["jquery-1.12.0.min.js", "toastr.js", "rne-logging.js", "rne-dialog.js", "content-vanilla.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["codebird.js", "rne-logging.js", "background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_title": "ReadNoEvil",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "web_accessible_resources": [
    "tweetdeck-blank.css",
    "vanilla-blank.css",
    "tweetdeck-faded.css",
    "vanilla-faded.css",
    "toastr.css",
    "icon19.png"
  ],
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "unlimitedStorage",
    "https://*.twitter.com/"
  ],

  "manifest_version": 2
}
